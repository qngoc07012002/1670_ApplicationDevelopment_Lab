@model Book
<h1> Deleted Book</h1>
<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row mb-3">
            <label asp-for="Title"></label>
            <input asp-for="Title" disabled>
        </div>
        <div class="row mb-3">
            <label asp-for="Description"></label>
            <input asp-for="Description" disabled>
        </div>
        <div class="row mb-3">
            <label asp-for="Author"></label>
            <input asp-for="Author" disabled>
        </div>
        <div class="row mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" disabled>
        </div>
        <div class="row mb-3">
            <label asp-for="CategoryId"></label>
            <input asp-for="CategoryId" disabled>
        </div>
        <div class="btn group" role="group">
            <button type="submit" class="btn btn-primary">Delete</button>
            <a asp-controller="Book" asp-action="Index" class="btn btn-primary"><i class="bi bi-trash"></i> Back to List</a>
        </div>

    </div>
</form>